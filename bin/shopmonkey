#!/usr/bin/env php
<?php

    $root = dirname(__DIR__);

    if (! is_file(sprintf('%s/vendor/autoload.php', $root))) {
        $root = dirname(__DIR__, 4);
    }

    require sprintf('%s/vendor/autoload.php', $root);

    use Davytimmers\LightspeedCli\Commands\Pull;
    use Davytimmers\LightspeedCli\Commands\Watch;
    use Davytimmers\LightspeedCli\Commands\Auth;
    use Davytimmers\LightspeedCli\Commands\Init;
    use Symfony\Component\Console\Application;

    $application = new Application();

    $application->add(new Pull());
    $application->add(new Watch());
    $application->add(new Auth());
    $application->add(new Init());
    $application->run();